<Window x:Class="Lab06_RM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab06_RM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Crear" Width="250" Height="60" FontSize="16" Click="Crear_Click"/>
            <Button Content="Actualizar" Width="250" Height="60" FontSize="16" Click="Actualizar_Click"/>
            <Button Content="Borrar" Width="250" Height="60" FontSize="16" Click="Borrar_Click"/>
            <Button Content="Listar" Width="250" Height="60" FontSize="16" Click="Listar_Click"/>
        </StackPanel>
    </Grid>
</Window>
